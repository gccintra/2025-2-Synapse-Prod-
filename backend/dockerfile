# /backend/dockerfile

FROM python:3.12-slim

WORKDIR /app

COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Instala o Gunicorn (servidor de produção)
RUN pip install gunicorn

COPY . .

# Variáveis de ambiente padrão (Railway sobrescreve as sensíveis)
ENV FLASK_APP=app.main:app
# IMPORTANTE: Desligar o modo debug em produção
ENV FLASK_DEBUG=0 

# Expõe a porta 5000
EXPOSE 5000

# Comando de produção:
# -w 4: Usa 4 "workers" (processos) para aguentar mais tráfego simultâneo
# -b 0.0.0.0:5000: Escuta em todos os IPs na porta 5000
CMD ["gunicorn", "-w", "4", "-b", "0.0.0.0:5000", "app.main:app"]